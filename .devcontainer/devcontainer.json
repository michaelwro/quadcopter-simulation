{
    "name": "simulation",
    "build": {
        "dockerfile": "Dockerfile",
        "args": {
            "TRICK_TAG": "19.7.1"
        }
    },
    "containerEnv": {
        "SHELL": "/bin/bash"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "eamodio.gitlens",
                "davidanson.vscode-markdownlint",
                "ms-azuretools.vscode-docker",
                "ms-python.python",
                "ms-vscode.cpptools-extension-pack"
            ],
            "settings": {
                "editor.insertSpaces": true,
                "files.associations": {
                    "S_define": "cpp"
                }
            }
        }
    }
}
