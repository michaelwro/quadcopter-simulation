{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 19,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base",
      "description": "Base config",
      "hidden": true,
      "binaryDir": "${sourceDir}/build/"
    },
    {
      "name": "Debug",
      "description": "Debug config.",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "QUAD_ASAN": "ON"
      }
    },
    {
      "name": "Release",
      "description": "Release config.",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "base",
      "hidden": true,
      "jobs": 0
    },
    {
      "name": "Debug",
      "description": "Build preset for debug build configuration.",
      "inherits": "base",
      "configurePreset": "Debug"
    },
    {
      "name": "Release",
      "description": "Build preset for release build configuration.",
      "inherits": "base",
      "configurePreset": "Release"
    }
  ]
}
